{
    "manifest_version": 3,
    "name": "LingQMonde",
    "version": "0.1.2",
    "description": "Import full Le Monde articles in LingQ",
    "permissions": ["activeTab", "scripting", "cookies"],
    "action": {
        "default_popup": "html/popup.html",
        "default_title": "Import Le Monde to LingQ",
        "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
        }
    },
    "host_permissions": [
        "https://*.lemonde.fr/*",
        "https://www.lingq.com/*"
    ],
    "background":{
        "service_worker": "scripts/background.js"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
  
  